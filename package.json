{
  "name": "razzwars-memory-game",
  "version": "1.0.0",
  "description": "Memory card game platform with prizes and real-time multiplayer",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "npm run build:admin && npm run build:player",
    "build:admin": "cd admin && npm install && npm run build",
    "build:player": "cd player && npm install && npm run build",
    "start": "node server/index.js",
    "setup-db": "node scripts/setup-database.js",
    "create-admin": "node server/scripts/create-admin.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "memory-game",
    "multiplayer",
    "prizes",
    "real-time"
  ],
  "author": "RazzWars",
  "license": "MIT"
}
